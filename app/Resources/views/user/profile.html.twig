{%  extends 'base.html.twig' %}

{% block body %}

    {% block main %}
        <div>
            {{ player.username }}
            <br>

            {% for planet in player.planets %}

                {% if planet.id == planetId %}
                    <p style="color : green">{{ planet.name }}[{{ planet.x }};{{ planet.y }}]</p>
                {% else %}
                    <a href="{{ path('change_planet', {id: planet.id}) }}"><p>{{ planet.name }}[{{ planet.x }};{{ planet.y }}]</p></a>
                {% endif %}
            {% endfor %}
        </div>
        <div class="pull-right">
            <a href="{{ path('buildings_list') }}">Buildings</a>
        </div>
    {% endblock %}
{% endblock %}
